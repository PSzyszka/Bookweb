.row
  .col-md-6.col-md-offset-3.col-lg-4.col-lg-offset-4
    %h2.text-center.login-headline Book edit
    .panel.panel-default
      .panel-body
        = form_for(@book, as: :book, url: edit_book_path(@book)) do |f|

          .form-group
            = f.label :title
            %br/
            = f.text_field :title, class: 'form-control'
          .form-group
            = f.label :rating
            %br/
            = f.number_field :rating, class: 'form-control'
          .form-group
            = f.label :year_of_release
            %br/
            = f.datetime_field :year_of_release, class: 'form-control'
          .form-group
            = f.label :description
            %br/
            = f.text_area :description, class: 'form-control'
          .actions.pull-right
            = f.submit "Update", class: 'btn btn-default'
